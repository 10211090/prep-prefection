<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_float"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_remove"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        app:tint="@color/main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="Rekomendasi Resep"
            android:padding="8dp"
            android:textColor="@color/main"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="25sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/cancelButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_close"
            app:tint="@color/main" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutCart"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_select_resep"
            android:src="@drawable/logo_landscape"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_name_product"
            app:tint="@color/main" />

        <TextView
            android:id="@+id/name_select_resep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textColor="@color/main"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_category_product"
            app:tint="@color/main" />

        <TextView
            android:id="@+id/category_select_resep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Produk"
            android:textColor="@color/main"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_material_product"
            app:tint="@color/main" />
        <TextView
            android:id="@+id/material_select_resep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bahan Produk"
            android:textColor="@color/main"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"/>

        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_how_product"
            app:tint="@color/main" />
        <TextView
            android:id="@+id/how_select_resep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cara buat Product"
            android:textColor="@color/main"
            android:layout_marginLeft="30dp"
            android:textSize="12sp"/>

    </LinearLayout>



</LinearLayout>